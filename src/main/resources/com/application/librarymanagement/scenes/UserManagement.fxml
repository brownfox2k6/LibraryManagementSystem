<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox prefHeight="635.0" prefWidth="1130.0" spacing="10.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.application.librarymanagement.user.UserManagementController">
   <children>
      <HBox fx:id="toolbar" alignment="CENTER_LEFT" spacing="10">
         <children>
            <HBox fx:id="searchBox" alignment="CENTER_LEFT" spacing="8">
               <children>
                  <Label prefHeight="19.0" prefWidth="160.0" style="-fx-font-weight: bold;" text="Filter by username:">
                     <font>
                        <Font name="Segoe UI" size="16.0" />
                     </font>
                     <HBox.margin>
                        <Insets left="10.0" />
                     </HBox.margin></Label>
                  <TextField fx:id="searchField" onAction="#searchUser" promptText="Username">
                     <font>
                        <Font name="Segoe UI" size="16.0" />
                     </font></TextField>
               </children>
            </HBox>
            <Label fx:id="resultLabel" prefHeight="25.0" prefWidth="566.0" text="Found %d records.">
               <font>
                  <Font size="16.0" />
               </font>
               <HBox.margin>
                  <Insets left="20.0" />
               </HBox.margin>
            </Label>
            <Button fx:id="addUserButton" onAction="#gotoAddUser" style="-fx-background-color: #28a745; -fx-text-fill: white; -fx-font-weight: bold;" text="Add New User">
               <font>
                  <Font name="Segoe UI" size="16.0" />
               </font></Button>
         </children>
      </HBox>
      <TableView fx:id="userTable" VBox.vgrow="ALWAYS">
         <columns>
            <TableColumn fx:id="usernameCol" prefWidth="150.0" text="Username" />
            <TableColumn fx:id="nameCol" prefWidth="150.0" text="Name" />
            <TableColumn fx:id="emailCol" prefWidth="220.0" text="Email" />
            <TableColumn fx:id="roleCol" prefWidth="150.0" text="Role" />
            <TableColumn fx:id="borrowedCol" prefWidth="150.0" text="Books Borrowed" />
            <TableColumn fx:id="borrowsActionCol" prefWidth="150.0" text="Borrows" />
         </columns>
      </TableView>
   </children>
   <padding>
      <Insets bottom="8" left="8" right="8" top="8" />
   </padding>
</VBox>
