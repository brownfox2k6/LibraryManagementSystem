<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.geometry.Pos?>

<AnchorPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.application.librarymanagement.user.AddUserController"
            prefWidth="380" prefHeight="400"
            style="-fx-background-color: #ffffff; -fx-border-color: #ddd; -fx-border-radius: 8; -fx-background-radius: 8;">

  <VBox spacing="12" alignment="CENTER"
        AnchorPane.topAnchor="20" AnchorPane.leftAnchor="20" AnchorPane.rightAnchor="20" AnchorPane.bottomAnchor="20">

    <!-- Title -->
    <Label text="Add New User"
           style="-fx-font-size: 18px; -fx-font-weight: bold;"/>

    <!-- Fields -->
    <TextField fx:id="txtName" promptText="Full Name" />
    <TextField fx:id="txtUsername" promptText="Username" />
    <TextField fx:id="txtEmail" promptText="Email" />
    <PasswordField fx:id="txtPassword" promptText="Password" />
    <PasswordField fx:id="txtConfirmPassword" promptText="Confirm Password" />

    <!-- Account Type -->
    <HBox spacing="10" alignment="CENTER_LEFT">
      <Label text="Account Type:"/>
      <RadioButton fx:id="radioAdmin" text="Admin"/>
      <RadioButton fx:id="radioMember" text="Member"/>
    </HBox>

    <!-- Buttons -->
    <HBox spacing="10" alignment="CENTER_RIGHT">
      <Button text="Cancel" onAction="#handleCancel"
              style="-fx-background-color: #f0f0f0; -fx-text-fill: #333; -fx-background-radius: 6;"/>
      <Button text="Add User" onAction="#handleAddUser"
              style="-fx-background-color: #4CAF50; -fx-text-fill: white; -fx-background-radius: 6;"/>
    </HBox>
  </VBox>
</AnchorPane>
