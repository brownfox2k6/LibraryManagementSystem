<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" spacing="10" xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.application.librarymanagement.user.ChangePasswordController"
      prefWidth="320" prefHeight="220">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Đổi mật khẩu" style="-fx-font-size: 16px;"/>

    <PasswordField fx:id="oldPasswordField" promptText="Mật khẩu cũ"/>
    <PasswordField fx:id="newPasswordField" promptText="Mật khẩu mới"/>
    <PasswordField fx:id="confirmPasswordField" promptText="Xác nhận mật khẩu mới"/>

    <HBox spacing="10">
        <Button text="Lưu" onAction="#handleSave"/>
        <Button text="Hủy" onAction="#handleCancel"/>
    </HBox>

    <Label fx:id="messageLabel" style="-fx-text-fill: red;"/>
</VBox>
