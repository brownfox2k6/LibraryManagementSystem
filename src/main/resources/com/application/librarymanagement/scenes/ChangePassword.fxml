<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<VBox prefHeight="635.0" prefWidth="1130.0" xmlns="http://javafx.com/javafx/24.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.application.librarymanagement.user.ChangePasswordController">
    <padding>
        <Insets bottom="20.0" left="200.0" right="200.0" top="20.0" />
    </padding>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Change Account Info">
      <font>
         <Font name="Segoe UI Bold" size="28.0" />
      </font>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </Text>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Full Name">
      <font>
         <Font name="Segoe UI Bold" size="20.0" />
      </font>
   </Text>
   <TextField fx:id="nameField">
      <font>
         <Font name="Segoe UI" size="24.0" />
      </font>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </TextField>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Email">
      <font>
         <Font name="Segoe UI Bold" size="20.0" />
      </font>
   </Text>
   <TextField fx:id="emailField">
      <font>
         <Font name="Segoe UI" size="24.0" />
      </font>
      <VBox.margin>
         <Insets bottom="20.0" />
      </VBox.margin>
   </TextField>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Change Password">
      <font>
         <Font name="Segoe UI Bold" size="28.0" />
      </font>
   </Text>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Leave it blank if you do not want to change the password.">
      <font>
         <Font name="Segoe UI" size="18.0" />
      </font>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin>
   </Text>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Old Password">
      <font>
         <Font name="Segoe UI Bold" size="20.0" />
      </font>
   </Text>

    <PasswordField fx:id="oldPasswordField">
      <font>
         <Font name="Segoe UI" size="24.0" />
      </font>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></PasswordField>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="New Password">
      <font>
         <Font name="Segoe UI Bold" size="20.0" />
      </font>
   </Text>
    <PasswordField fx:id="newPasswordField">
      <font>
         <Font name="Segoe UI" size="24.0" />
      </font>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></PasswordField>
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Confirm New Password">
      <font>
         <Font name="Segoe UI Bold" size="20.0" />
      </font>
   </Text>
    <PasswordField fx:id="confirmPasswordField">
      <font>
         <Font name="Segoe UI" size="24.0" />
      </font>
      <VBox.margin>
         <Insets bottom="10.0" />
      </VBox.margin></PasswordField>

    <HBox spacing="15.0">
        <Button onAction="#handleSave" style="-fx-background-color: #4CAF50; -fx-text-fill: white;" text="Save changes">
         <font>
            <Font name="Segoe UI" size="24.0" />
         </font></Button>
        <Button onAction="#handleCancel" text="Cancel">
         <font>
            <Font name="Segoe UI" size="24.0" />
         </font></Button>
      <VBox.margin>
         <Insets top="10.0" />
      </VBox.margin>
    </HBox>
</VBox>
